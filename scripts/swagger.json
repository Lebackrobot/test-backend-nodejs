                                        "title": {
                                            "type": "string"
                                        },
                                        "_id": {
                                            "type": "ID"
                                        }
                                    }
                                },
                                "example": {
                                    "categories": [
                                        {"_id": 123, "title": "Doces"},
                                        {"_id": 456, "title": "Salgados"},
                                        {"_id": 567, "title": "Sashimi"}
                                    ]
                                }                                

                            }
